{
    "name": "backend",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "fixtures": "fixtures ./fixtures -c ./ormconfig.json --sync --require=ts-node/register --require tsconfig-paths/register",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint '*/**/*.{js,ts,tsx}'",
        "lint:fix": "eslint '*/**/*.{js,ts,tsx}' --fix",
        "migration:generate": "ts-node node_modules/.bin/typeorm migration:generate -n",
        "migration:revert": "ts-node node_modules/.bin/typeorm migration:revert",
        "migration:run": "ts-node node_modules/.bin/typeorm migration:run",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
        "start": "nest start -p ./tsconfig.json src/main.ts",
        "prestart:prod": "npm run migration:run",
        "start:prod": "nest start",
        "test": "jest",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@nestjs-modules/mailer": "^1.5.1",
        "@nestjs/cli": "^7.5.1",
        "@nestjs/common": "^7.4.4",
        "@nestjs/config": "^0.5.0",
        "@nestjs/core": "^7.4.4",
        "@nestjs/passport": "^7.1.0",
        "@nestjs/platform-express": "^7.4.4",
        "@nestjs/platform-socket.io": "^7.4.4",
        "@nestjs/typeorm": "^7.1.3",
        "@nestjs/websockets": "^7.4.4",
        "@typescript-eslint/eslint-plugin": "^1.10.2",
        "@typescript-eslint/parser": "^1.10.2",
        "braces": "^3.0.2",
        "class-transformer": "^0.2.3",
        "dotenv": "^8.0.0",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^4.3.0",
        "eslint-plugin-prettier": "^3.1.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.15",
        "matrix-factorization": "^2.0.0",
        "nodemailer": "^6.4.11",
        "passport": "^0.4.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-jwt": "^4.0.0",
        "pca-js": "^1.0.2",
        "pg": "^7.11.0",
        "reflect-metadata": "^0.1.12",
        "rimraf": "^2.6.2",
        "rxjs": "^6.3.3",
        "ts-node": "8.1.0",
        "typeorm": "^0.2.18",
        "typescript": "^3.7.4"
    },
    "devDependencies": {
        "@nestjs/testing": "^6.0.0",
        "@types/express": "^4.16.0",
        "@types/jest": "^23.3.13",
        "@types/node": "^10.12.18",
        "@types/passport-oauth2": "^1.4.8",
        "@types/socket.io": "^2.1.2",
        "@types/supertest": "^2.0.7",
        "concurrently": "^4.1.0",
        "eslint-utils": "^1.4.2",
        "jest": "^23.6.0",
        "prettier": "^1.18.2",
        "supertest": "^3.4.1",
        "ts-jest": "24.0.2",
        "tsconfig-paths": "3.8.0",
        "tslint": "5.16.0",
        "typeorm-fixtures-cli": "^1.3.2",
        "wait-on": "^3.2.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
